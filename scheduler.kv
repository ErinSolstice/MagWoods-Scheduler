<ScheduleScreen>:
	GridLayout:
		cols: 8
		Button:
			text: 'Change Screen'
			on_release: root.manager.current = ''
		Label:
			text: 'Monday'
		Label:
			text: 'Tuesday'
		Label:
			text: 'Wednesday'
		Label:
			text: 'Thursday'
